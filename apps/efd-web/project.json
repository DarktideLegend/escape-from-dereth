{
  "name": "efd-web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/efd-web",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/efd-web"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/efd-web"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "efd-web:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "efd-web:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "efd-web:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "efd-web:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/efd-web/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/efd-web/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "outputPath": "dist/packages/efd-web",
        "changelog": true,
        "github": true,
        "npm": false,
        "repositoryUrl": "https://github.com/DarktideLegend/escape-from-dereth.git",
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "Documentation",
              "hidden": false
            },
            {
              "type": "build",
              "section": "Build System Dependencies",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "Performance Improvements",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "Revert Changes",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "Changes to the CI configuration files and scripts",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "Other changes that don't modify src or test files",
              "hidden": false
            }
          ]
        },
        "releaseRules": [
          {
            "type": "docs",
            "scope": "readme",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "build",
            "scope": "deps",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          }
        ],
        "branches": [
          "main",
          {
            "name": "alpha",
            "prerelease": true
          },
          {
            "name": "beta",
            "prerelease": true
          }
        ],
        "plugins": [
          [
            "semantic-release-discord-bot",
            {
              "packageName": "efd-web",
              "notifications": [
                {
                  "branch": "alpha"
                }
              ]
            }
          ],
          [
            "@codedependant/semantic-release-docker",
            {
              "dockerTags": [
                "{{#if prerelease.[0]}}{{prerelease.[0]}}{{else}}latest{{/if}}",
                "{{major}}-{{#if prerelease.[0]}}{{prerelease.[0]}}{{else}}latest{{/if}}",
                "{{major}}.{{minor}}-{{#if prerelease.[0]}}{{prerelease.[0]}}{{else}}latest{{/if}}",
                "{{version}}"
              ],
              "dockerImage": "efd-web",
              "dockerFile": "apps/efd-web/Dockerfile",
              "dockerContext": "apps/efd-web",
              "dockerProject": "apourman"
            }
          ]
        ],
        "tagFormat": "efd-web-v${VERSION}"
      }
    }
  },
  "tags": []
}