# User / Group IDs
PUID=1000
PGID=1000

# Time Zone
TZ={{ ace_tz }}

# MySQL Server VARIABLES
MYSQL_ROOT_HOST=%
MYSQL_ROOT_PASSWORD={{ ace_mysql_root_password }}
MYSQL_USER={{ ace_mysql_user }}
MYSQL_PASSWORD={{ ace_mysql_password }}
MYSQL_DATABASE=ace%

# ACEmulator Config.js VARIABLES
ACE_WORLD_NAME={{ ace_world_name }}
ACE_DAT_FILES_DIRECTORY={{ ace_dat_files_directory }}

ACE_SQL_AUTH_DATABASE_NAME={{ ace_sql_auth_database_name }}
ACE_SQL_AUTH_DATABASE_HOST={{ ace_sql_auth_database_host }}
ACE_SQL_AUTH_DATABASE_PORT=3306

ACE_SQL_SHARD_DATABASE_NAME={{ ace_sql_shard_database_name }}
ACE_SQL_SHARD_DATABASE_HOST={{ ace_sql_shard_database_host }}
ACE_SQL_SHARD_DATABASE_PORT=3306

ACE_SQL_WORLD_DATABASE_NAME={{ ace_sql_world_database_name }}
ACE_SQL_WORLD_DATABASE_HOST={{ ace_sql_world_database_host }}
ACE_SQL_WORLD_DATABASE_PORT=3306

ACE_SQL_INITIALIZE_DATABASES=true
ACE_SQL_DOWNLOAD_LATEST_WORLD_RELEASE=true

ACE_NONINTERACTIVE_CONSOLE=true

# Mysql Backup
DB_SERVER=ace-backup
DB_USER={{ ace_mysql_user}}
DB_PASS={{ ace_mysql_password }}
DB_NAMES="ace_auth ace_shard"
DB_DUMP_TARGET=/ace/dumps
DB_DUMP_FREQ=180
COMPRESSION=bzip2
NICE=true